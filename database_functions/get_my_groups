
  -- Selezioniamo i dati dalla tabella 'groups'
  SELECT
    g.id,
    g.descrizione
  FROM
    public.groups AS g
  -- Facciamo un JOIN con la tabella di collegamento 'user_groups'
  JOIN
    public.user_groups AS ug ON g.id = ug.idgroup
  -- La condizione FONDAMENTALE: filtriamo i risultati per l'ID dell'utente
  -- che sta effettuando la chiamata, ottenuto tramite la funzione auth.uid().
  WHERE
    ug.userid = auth.uid();
